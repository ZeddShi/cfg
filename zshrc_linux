export ZSH="/home/vagrant/.oh-my-zsh"

ZSH_THEME="awesomepanda"

plugins=(
  git zsh-syntax-highlighting zsh-autosuggestions
)

source $ZSH/oh-my-zsh.sh

# cmd
alias zshconf="vim ~/.zshrc"
alias bashconf="vim ~/.bash_profile"
alias vimconf="vim ~/.vimrc"
alias fp="ps -ef | grep -i"

# proxy
alias sethp="export http_proxy=socks5://localhost:1080"
alias unsethp="unset http_proxy"
alias sethps="export https_proxy=socks5://localhost:1080"
alias unsethps="unset https_proxy"

# mysql
alias mysql-local="mysql -uroot -pshize"
alias mysql-xcxtest="mysql -uyouliao -pyouliao -h172.16.1.107 -P3306"

# git
alias gitprune="git remote update origin --prune"

# virtualenvwrapper
export WORKON_HOME=$HOME/.virtualenvs
source $HOME/.pyenv/versions/3.6.5/bin/virtualenvwrapper.sh

export PATH="/usr/local/sbin:$PATH"

# pyenv
export PYENV_ROOT="$HOME/.pyenv"
export PATH="$PYENV_ROOT/bin:$PATH"
if command -v pyenv 1>/dev/null 2>&1; then
  eval "$(pyenv init -)"
fi
